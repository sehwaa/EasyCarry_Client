<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/bg1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/account2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/account2" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="내 정보 수정하기"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/reservationLayout">

        <EditText
            android:id="@+id/namemodify"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/namebutton3"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:hint="이름"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/phonemodify"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/namebutton3"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:hint="휴대폰번호"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/okBtn"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@drawable/namebutton4"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>